@model Tarea

<h1>Editar Tarea</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion)
        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Estado)
        @Html.DropDownListFor(model => model.Estado, new SelectList(Enum.GetValues(typeof(EstadoTarea))), "Seleccione un estado", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Estado)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FechaVencimiento)
        @Html.TextBoxFor(model => model.FechaVencimiento, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FechaCreacion)
        @Html.TextBoxFor(model => model.FechaCreacion, new { @class = "form-control" })
    </div>

    <p>
        <input type="submit" value="Guardar" class="btn btn-primary" />
        @Html.ActionLink("Volver a la lista", "Index")
    </p>
}
